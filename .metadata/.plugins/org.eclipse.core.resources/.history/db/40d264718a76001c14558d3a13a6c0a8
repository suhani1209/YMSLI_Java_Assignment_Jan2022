package com.day2.q4;

import java.util.Scanner;

class Student{
	public String name;
	public String id;
	public double grade;
	public Student(String id)
	{
		this.id=id;
	}
	public Student(String name,String id)
	{
		this(id);
		this.name=name;
	}
	public Student(String name,String id,double grade)
	{
		this(name,id);
		this.grade=grade;
	}
	public void display()
	{
		System.out.println("Name : "+name+" id : "+id+" grade : "+grade);
	}
	public void display(int year)
	{
		this.display();
		System.out.println("This student has value in the year: "+year);
	}
}
public class StudentClassOverloading {
	public static void main(String[] args) {
		
		Scanner scan=new Scanner(System.in);
		boolean stop=false;
		while(stop==false)
		{
			System.out.println("Option 1 : Create a student object   Option 2 : Display Student info");
			int ch=scan.nextInt();
			if(ch==1)
			{
				System.out.println("Enter details .. ");
				
			}
			else if(ch==2)
			{
				System.out.println("Want to enter year : 1/0");
				int n=scan.nextInt();
				if(n==1) {
					System.out.print("Enter year : ");
					int year=scan.nextInt();
					
				}
				
			}else {
				stop=true;
				System.out.println("Exit the application..");
			}
		}
		
		
	}
}
